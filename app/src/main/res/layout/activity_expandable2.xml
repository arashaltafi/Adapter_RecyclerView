<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".expandable.expandable2.ExpandableActivity2">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSample1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="simple" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSample2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="selectable" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSample3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="only one opened" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSample4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="affecting other children" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSample5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="nodes" />

</androidx.appcompat.widget.LinearLayoutCompat>
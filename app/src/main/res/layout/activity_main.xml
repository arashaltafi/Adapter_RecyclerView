<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_list_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="list adapter" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_paging_adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="paging adapter" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_animation_adapter_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="animation adapter 1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_animation_adapter_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="animation adapter 2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_drag_and_drop_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="drag and drop 1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_drag_and_drop_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="drag and drop 2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_swipe_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Swipe" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_expandable_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Expandable 1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_expandable_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Expandable 2" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>